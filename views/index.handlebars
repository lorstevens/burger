

<div class="container">
  <div class="row">
      <div class="col-md-6">
        <h1 class="welcome"> <img src="../../images/burger.png" alt="burger" height="90" width="90"> Lorna Burg</h1>
      </div>
  
      <h5 class="ml8">
        <span class="letters-container">
          <span class="letters letters-left">We're Open!</span>
        </span>
      </h5>
    </div>




<div class="burgerMenu row">
    <nav>
        <div class="nav-wrapper">
            <a href="#" class="brand-logo center">Burger Menu</a>
        </div>
    </nav>
    <div class="col s12 m12">
        <ul style="list-style: none; font-size: 20px">
          {{#each burgers}}
            {{#unless devoured}}
            {{> burger-block devour=true}}
            {{/unless}}
          {{/each}}
        <ul>
      </div>
  </div>

<div class ="ate row">
  <nav>
    <div class="nav-wrapper">
        <a href="#" class="brand-logo center">Ordered</a>
    </div>
</nav>
    <div class="col s12 m12">
      <ul style="list-style: none; font-size: 20px">
      {{#each burgers}}
        {{#if devoured}}
          {{> burger-block devour=false}}
        {{/if}}
      {{/each}}
      </ul>
    </div>    
</div>

  <div class="row">
      <div class="col-1g-6">
          <form class="create-form">
              <div class="form-group">
                  <label for="burg">
                      <h5>Know of a good burger? Add it to our menu...</h5></label>
                  <input type="text" id="burg" name="name">
              </div>
              <button type="submit"> <img src="../../images/eat.png" alt="burger" height="20" width="20">  Add Burger</button>
          </form>
      </div>
  </div>

</div>
